<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/background"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LoadingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:padding="20dp"
                android:background="@drawable/roundshape">
                <com.jjoe64.graphview.GraphView
                    android:id="@+id/gv_pattern_sleep"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="20dp"
                android:padding="20dp"
                android:background="@drawable/roundshape">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="당신은 평균"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/tv_pattern_sleepAvg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7.8시간"
                    android:textStyle="bold"
                    android:textColor="#FF2244"
                    android:textSize="60sp"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="의 수면을 취하는군요!"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="20dp"
                android:padding="20dp"
                android:background="@drawable/roundshape">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="당신의 숙면 정도는"
                    android:textSize="15sp"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/tv_pattern_sleepQual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23%"
                    android:textColor="#FF2244"
                    android:textStyle="bold"
                    android:textSize="60sp"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="입니다."
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginBottom="20dp"
                android:padding="20dp"
                android:background="@drawable/roundshape">
                <com.jjoe64.graphview.GraphView
                    android:id="@+id/gv_pattern_sleeptime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="30dp"
                    />
                <TextView
                    android:id="@+id/tv_pattern_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:text="당신의 수면은 매우 불규칙적입니다."
                    android:textSize="15sp"
                    android:textColor="#000000"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
