<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/background"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".DateActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_date_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="----년 --월 --일"
                android:textColor="#FFFFFF"
                android:textSize="35sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="20dp"
                android:padding="20dp"
                android:orientation="vertical"
                android:weightSum="4"
                android:background="@drawable/roundshape">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tv_date_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="당신은 이날  "
                        android:textSize="16sp"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/tv_date_sleeptime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7.8시간"
                        android:textStyle="bold"
                        android:textColor="#F92F19"
                        android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/tv_date_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  주무셨습니다!"
                        android:textSize="15sp"
                        android:textColor="#000000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tv_date_text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수면시작시간 : "
                        android:textColor="#000000"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tv_date_starttime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="yyyy-MM-dd HH:mm:ss"
                        android:textColor="#F92F19"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_date_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수면기상시간 : "
                    android:textColor="#000000"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tv_date_endtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="yyyy-MM-dd HH:mm:ss"
                    android:textColor="#F92F19"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/tv_date_text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="숙면 정도(수면의 질) :   "
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_below="@id/tv_date_text4"/>
                    <TextView
                        android:id="@+id/tv_date_sleepQual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="#F92F19"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_toRightOf="@id/tv_date_text5"
                        android:layout_below="@id/tv_date_endtime"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:padding="20dp"
                android:orientation="vertical"
                android:background="@drawable/roundshape">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수면단계"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"
                    android:textColor="#000000"/>
                <com.jjoe64.graphview.GraphView
                    android:id="@+id/gv_date_sleep"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:orientation="vertical"
                android:background="@drawable/roundshape">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수면소음"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_above="@id/gv_date_sleep"/>
                <com.jjoe64.graphview.GraphView
                    android:id="@+id/gv_date_noise"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
